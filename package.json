{
  "name": "roadmap-generator",
  "version": "1.0.0",
  "description": "Roadmap Generator Application",
  "main": "server/script.js",
  "scripts": {
    "start": "bun server/script.js",
    "build": "cd client && bun install && bun run build",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "server": "node server/script.js",
    "client": "cd client && bun run dev"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "groq-sdk": "^0.3.3"
  },
  "devDependencies": {
    "concurrently": "^6.5.1"
  }
}